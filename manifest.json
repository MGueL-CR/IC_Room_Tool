{
    "name": "IC-Room Tool",
    "description": "Administra y trabaje de manera más facil con plantillas de texto.",
    "author": "@MGueL-CR",
    "version": "1.0.0.0",
    "manifest_version": 3,
    "action": {
        "default_title": "IC-Room Tool",
        "default_description": "Administra y trabaje de manera más facil con un formateador de texto.",
        "default_popup": "/assets/files/popup.html",
        "default_icon": {
            "16": "/assets/icons/utiles-x16.png",
            "32": "/assets/icons/utiles-x32.png",
            "64": "/assets/icons/utiles-x64.png",
            "128": "/assets/icons/utiles-x128.png"
        }
    },
    "side_panel": {
        "default_path": "/index.html"
    },
    "icons": {
        "16": "/assets/icons/utiles-x16.png",
        "32": "/assets/icons/utiles-x32.png",
        "64": "/assets/icons/utiles-x64.png",
        "128": "/assets/icons/utiles-x128.png"
    },
    "background": {
        "service_worker": "/assets/libs/js/exts/service-worker.js"
    },
    "permissions": [
        "sidePanel"
    ]
}